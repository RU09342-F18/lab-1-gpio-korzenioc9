#include <msp430.h>
void main(void) {

    WDTCTL = WDTPW + WDTHOLD;

    P1DIR = BIT0;
    P1REN = BIT3; //ENABLES PULL UP RESISTOR FOR PORT 1 PIN 3
    P1OUT = BIT3; //SETS PORT 1 OUTPUT TO NORMALLY HIGH, BY CONNECTING THE PULL UP RESISTOR

    while(1){

        if((P1IN & BIT3)!=BIT3){ //THIS IF STATEMENT TURNS ON/OFF THE LED WITH THE PRESS OF A BUTTON - MOMENTARY ACTION TOGGLE SWITCH
        _delay_cycles(250000); //ADDS DELAY SO LED IS VISIBLE TO THE HUMAN EYE
        P1OUT ^= BIT0;
        }
    }
}
